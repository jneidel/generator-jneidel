{
  "name": "<%= moduleName %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "repository": "<%= username %>/<%= moduleName %>",
  "license": "MIT",
  "author": {
    "name": "<%= authorName %>",
    "email": "<%= authorEmail %>",
    "url": "<%= authorUrl %>"
  },
  "main": "app.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "start": "concurrently \"npm run watch\" \"npm run build\" \"npm run unit\" --names \"ðŸ’»,ðŸ“¦,ðŸš€\" --prefix name",
    "watch": "nodemon app.js --ignore dist/ --ignore test/ --trace-sync-io",
    "build": "webpack -w",
    "unit": "nodemon --exec 'ava ./test/unit/*.test.js' --ignore dist/",
    "test": "ava ./test/*/*.test.js",
    "prod": "node -r dotenv/config app.js dotenv_config_path=vars.env"
  },
  "dependencies": {
    "axios": "latest",
    "bcrypt": "latest",
    "body-parser": "latest",
    "connect-flash": "latest",
    "compression": "latest",
    "dotenv": "latest",
    "express": "latest",
    "express-session": "latest",
    "express-sessions": "latest",
    "helmet": "latest",
    "jsonwebtoken": "latest",
    "mongoose": "latest",
    "mongoose-mongodb-errors": "latest",
    "normalize-scss": "latest",
    "passport": "latest",
    "passport-local": "latest",
    "pug": "latest",
    "validator": "latest"
  },
  "devDependencies": {
    "ava": "latest",
    "concurrently": "latest",
    "mockery": "latest",
    "morgan": "latest",
    "nodemon": "latest",
    "setup-webpack": "latest",
    "sinon": "latest",
    "sinon-mongoose": "latest"
  },
  "ava": {
    "files": [
      "test/*.test.js",
      "test/**/*.test.js"
    ]
  }
}
